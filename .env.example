# =======================
# DATABASE CONFIGURATION
# =======================
DB_NAME=gis
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Connection Pool
DB_MIN_CONNECTIONS=2
DB_MAX_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=30.0
DB_IDLE_TIMEOUT=300.0
DB_HEALTH_CHECK_INTERVAL=60
DB_POOL_RETRIES=3
DB_POOL_BACKOFF_FACTOR=1.5
DB_POOL_BACKOFF_MAX=30

# SSL (optional)
DB_SSL_ENABLED=False
DB_SSL_VERIFY=True
DB_SSL_CERT=
DB_SSL_KEY=
DB_SSL_CA=

# =======================
# TELEGRAM BOT
# =======================
TELEGRAM_TOKEN=your_telegram_token
ADMIN_IDS=your_admin_ids
ACCESS_PASSWORD=your_bot_password

# =======================
# PROXY (optional)
# =======================
# HTTPS_PROXY=socks5://user:pass@proxy.example.com:1080
# HTTPS_PROXY=http://proxy.example.com:8080

# =======================
# LOGGING
# =======================
LOG_LEVEL=INFO
HTTPS_LOG_LEVEL=WARNING
LOG_DIR=logs

# =======================
# XML EXPORT/IMPORT
# =======================
XML_OUTPUT_DIR=output
XML_TEMP_DIR=temp
MAX_FILE_SIZE=10485760

# =======================
# CACHE
# =======================
CACHE_ENABLED=True
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# =======================
# MULTITHREADING / WORKERS
# =======================
MAX_WORKERS=4
CHUNK_SIZE=100

# =======================
# OTHER
# =======================
DEBUG=False
XML_UPDATE_INTERVAL=3600

# =======================
# EXPORT CONFIG (optional)
# =======================
EXPORT_CONFIG_PATH=XML_search/config/export_config.json

# =======================
# HEALTHCHECK (for Docker)
# =======================
HEALTHCHECK_INTERVAL=30
HEALTHCHECK_TIMEOUT=5

# =======================
# PATHS TO CONFIGS (optional)
# =======================
DB_CONFIG_PATH=XML_search/config/db_config.json
ENHANCED_CONFIG_PATH=XML_search/config/enhanced_config.json